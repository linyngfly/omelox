{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "dom",
      "es6",
      "es2015.promise"
    ],
    "target": "ES2020",
    // "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "sourceMap": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "config",
    "build",
    "doc",
    "env",
    "game-data",
    "logs",
    "samples",
    "shared",
  ]
}