{
  "name": "omelox",
  "version": "2.1.0",
  "homepage": "https://gitee.com/gamingcity/omelox",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/gamingcity/omelox.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "yarn run build && node dist/index",
    "lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts",
    "fix-lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts --fix",
    "test": "yarn run build",
    "cov": "nyc mocha",
    "ci": "yarn run test",
    "mochatest": "cd dist && mocha --require source-map-support/register --recursive",
    "gen-api-ref": "node ../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/omelox lib/"
  },
  "engines": {
    "node": ">=8.5"
  },
  "bugs": {
    "url": "https://gitee.com/gamingcity/omelox/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://gitee.com/gamingcity/omelox#license"
    }
  ],
  "keywords": [
    "omelox",
    "omelox",
    "framework",
    "game",
    "web",
    "realtime",
    "server"
  ],
  "files": [
    "bin",
    "dist",
    "lib",
    "template",
    "test"
  ],
  "main": "./dist/lib/index",
  "types": "./lib/index",
  "dependencies": {
    "@types/mocha": "^2.2.46",
    "@types/mqtt-connection": "git+https://github.com/node-pinus/types-mqtt-connection.git",
    "@types/socket.io": "^2.1.3",
    "async": "^2.6.0",
    "cliff": "^0.1.10",
    "commander": "^2.12.2",
    "crc": "^3.5.0",
    "eyes": "^0.1.8",
    "mkdirp": "^0.5.1",
    "mqtt-connection": "^3.2.0",
    "node-bignumber": "^1.2.1",
    "omelox-admin": "^2.1.0",
    "omelox-loader": "^2.1.0",
    "omelox-logger": "^2.1.0",
    "omelox-protobuf": "^2.1.0",
    "omelox-protocol": "^2.1.0",
    "omelox-rpc": "^2.1.0",
    "omelox-scheduler": "^2.1.0",
    "seq-queue": "^0.0.5",
    "socket.io": "^2.0.4",
    "ws": "^3.3.3"
  },
  "bin": {
    "omelox": "./dist/bin/omelox.js"
  },
  "devDependencies": {
    "@types/async": "^2.0.46",
    "@types/cliff": "^0.1.4",
    "@types/commander": "^2.12.2",
    "@types/crc": "^3.4.0",
    "@types/eyes": "^0.1.31",
    "@types/mkdirp": "^0.5.2",
    "@types/ws": "^3.2.1",
    "mocha": "^4.1.0",
    "muk": ">=0.0.1",
    "nyc": "^8.4.0",
    "should": "^3.3.2",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  }
}
