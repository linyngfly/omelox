	"author": "yng <linyngfly@163.com>",
	"private": false,
	"main": "./dist/index",
	"types": "./lib/index",
	"files": [
		"dist",
		"lib",
		"test",
		"sample",
		"index.ts"
	],
	"scripts": {
		"build": "tsc",
		"start": "yarn run build && node dist/index",
		"lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts sample/**/*.ts",
		"fix-lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts sample/**/*.ts --fix",
		"test": "yarn run build",
		"cov": "nyc mocha",
		"ci": "yarn run test",
		"gen-api-ref": "node ../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/omelox-rpc lib/"
	},
	"homepage": "https://gitee.com/gamingcity/omelox",
    "repository": {
      "type": "git",
      "url": "https://gitee.com/gamingcity/omelox.git"
    },
	"dependencies": {
		"async": "^3.0.0",
		"bearcat-buffer": "^0.1.x",
		"bluebird": "^3.5.1",
		"crc": "^0.2.1",
		"mqtt-connection": "^3.2.0",
		"omelox-loader": "^3.0.6",
		"omelox-logger": "^3.0.6",
		"socket.io": "^2.3.0",
		"source-map-support": "^0.5.0",
		"stream-pkg": "0.0.5",
		"uuid": "^3.1.0",
		"ws": "^7.0.0"
	},
	"devDependencies": {
