		"@types/socket.io-client": "^1.4.32",
		"@types/uuid": "^3.4.3",
		"@types/ws": "^6.0.0",
		"mocha": "6.2.2",
		"should": "13.2.3",
		"tslint": "5.20.1",
		"typescript": "3.7.3"
	}
