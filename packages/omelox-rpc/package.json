		"@types/ws": "8.2.2",
		"mocha": "6.2.2",
		"should": "13.2.3",
		"tslint": "^6.1.3",
		"typescript": "^4.3.5"
	},
	"gitHead": "6d77f1a2b447b6e73f1540bb60504f3dc864b1fb"
