{
    "name": "omelox-simple-example-game-server",
    "version": "2.1.0",
    "private": false,
    "bin": {
        "$": "./dist/bin/app.js"
    },
    "main": "./dist/app",
    "scripts": {
        "build": "tsc",
        "start": "yarn run build && cd dist &&  node app",
        "lint": "node_modules/.bin/tslint --format prose -c ../../../tslint.json **/*.ts",
        "fix-lint": "node_modules/.bin/tslint --format prose -c ../../../tslint.json **/*.ts --fix",
        "test": "yarn run build",
        "cov": "nyc mocha",
        "ci": "yarn run test",
        "gen-api-ref": "node ../../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../../run/site/public/api-reference/omelox-loader lib/"
    },
    "engines": {
        "node": ">=8.5"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.19",
        "@types/node": "8.5.7",
        "bluebird": "^3.5.1",
        "omelox": "^2.1.0",
        "omelox-base-plugin": "^2.1.0",
        "reflect-metadata": "^0.1.10",
        "source-map-support": "^0.5.0"
    },
    "devDependencies": {
        "tslint": "^5.9.1",
        "typescript": "^2.9.2"
    }
}
